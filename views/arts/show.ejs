<% include include/header %>
<div class="left">
    <div id="logo" class="logo affix">
        <img src="http://wyxgame-club.stor.appsina.com/attachment/1306/thread/208_2215815283_139389d82a9b599.png" width="96px" height="96px">
        <h2>每日名画</h2>
    </div>
</div>
<% for(var i = 0 ;  i < docs.length ; i++ ) { %>
    <div class="wrap row w700">
        <div class="header">
            <h2 class="nav">
                &nbsp;&nbsp;<%= docs[i]['n_publish'] %> &nbsp; | &nbsp; <%= docs[i]['name'] %>
            </h2>
        </div>
        <div class="art">
            <div class="box w700">
                <div class="show">
                    <img id="normal" src="<%= docs[i]['pic'] %>">
                    <span class="author"> <%= docs[i]['author'] %> </span>
                </div>
                <div class="action_wrap">
                    <div class="action">
                     <a class="share" data-_id="<%= docs[i]['_id']%>"><i class="icon-share-alt icon-white"></i> 分享给朋友 <span class="num">(<%= docs[i]['commentcount'] %>) </span></a>
                     &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                     <a class="like" data-_id ="<%= docs[i]['_id']%>"><i class="icon-star-empty icon-white"></i> 收藏到相册 <span class="num">(<%= !!docs[i]['likecount'] ? docs[i]['likecount'] : 0  %>)</span></a>
                     </div>
                </div>
                <div class="detail">
                    <%var details =  docs[i]['detail'].split("\r\n");
                      for(var j =0;j<details.length;j++){
                     %>
                     <p><%=details[j]%></p>
                     <%}%>
                </div>

                <div class="comment"></div>
            </div>
        </div>
        <div class="line"></div>
    </div>
    <% } %>

<script src="/javascripts/show.js"></script>
<% include include/footer %>